{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "assets": [
            {
                "include": "../config/config.yaml",
                "outDir": "./dist/config",
                "watchAssets": true
            }
        ]
    }
}
